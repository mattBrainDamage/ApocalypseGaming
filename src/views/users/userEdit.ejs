<%- include('../partials/head') %> 




<!-- Edit User Form -->

<div class="container" style="margin-top:30px; margin-bottom: 30px;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2>Editar usuario <%= userLogged.firstName %> <%= userLogged.lastName %></h2>
            <div class="errors">
                <ul></ul>
            </div>	
            <form method="POST" action="/users/edit?_method=PUT" class="userEdit" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b>Nombre:</b></label>
                            <input 
                                type="text" 
                                name="firstName" 
                                class="form-control
                                <% if (typeof hasErrorGetMessage !== 'undefined') { %>
                                    <%= hasErrorGetMessage('firstName', errors) ? 'is-invalid' : null %> 
                                <% } %>
                                "
                                value='<%= userLogged.firstName %> '
                            >
                            <i class="invalid-feedback">
                                <% if (typeof hasErrorGetMessage !== 'undefined') { %>
                                    <%= hasErrorGetMessage('firstName', errors) ? hasErrorGetMessage('firstName', errors) : null %>
                                <% } %>
                            </i>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b>Apellido:</b></label>
                            <input type="text" name="lastName" class="form-control"
                            value='<%= userLogged.lastName %>'
                            >
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                

                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b>Imagen de perfil:</b></label>
                            <br>
                            <br>
                            <img width="250" height="250" src="/images/avatars/<%= userLogged.avatar %>" width="100%">
                            <div class="custom-file">
                                <input 
                                    type="file" 
                                    name="avatar"
                                    class="custom-file-input
                                    <% if (typeof hasErrorGetMessage !== 'undefined') { %>
                                        <%= hasErrorGetMessage('avatar', errors) ? 'is-invalid' : null %> 
                                    <% } %>
                                    "
                                >
                                <label class="custom-file-label">Choose file...</label>
                                <i class="invalid-feedback">
                                    <% if (typeof hasErrorGetMessage !== 'undefined') { %>
                                    <%= hasErrorGetMessage('avatar', errors) ? hasErrorGetMessage('avatar', errors) : null %>
                                    <% } %>
                                </i>
                            </div>
                        </div>
                    </div>

                </div>		
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Edit User Form -->


<%- include('../partials/footer') %> 
