
<%- include('partials/head'); %>

<body>
	<%- include('partials/navbar'); %>
	


<div class="container" style="margin-top:30px; margin-bottom: 30px;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2>Edición del juego: <%= game.game_name %></h2>

            <form action="/products/edit/<%= game.id %>?_method=PUT"  method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <label><b>Imagen:</b></label>
                        <img src="<%= game.images %>" alt="..." class="rounded">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="images">
                            <label class="custom-file-label">Seleccione imagen...</label>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <br><br>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b>Título:</b></label>
                            <input type="text" name="game_name" value="<%= game.game_name %>"class="form-control">
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b>Rating:</b></label>
                            <input type="text" name="rating" value="<%= game.rating %>" class="form-control">
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>



                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b>Precio:</b></label>
                            <input type="text" name="price" value="<%= game.price %>" class="form-control">
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label><b>Género:</b></label>
                            <select name="genre_id" class="form-control">
                                <option value="">Elegí un género</option>
                                <% genres.forEach(oneGenre => { %>
                                <option 
                                    value="<%= oneGenre.id %>"
                                    <%= game.genre_id == oneGenre.id ? 'selected' : null %>
                                >
                                    <%= oneGenre.genre_name %>
                                </option>
                                <% }) %>
                            </select>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <br><br>
                        <h5>Si desea borrar el producto presione el siguiente botón</h5>
                        <form action="/products/delete/<%= game.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-primary">Borrar</button>
                        </form>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




<%- include('partials/footer'); %>
</body>
</html>